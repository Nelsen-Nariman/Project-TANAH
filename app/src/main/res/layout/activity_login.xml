<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="650dp"
        android:layout_height="920dp"
        android:src="@drawable/background_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judul_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subjudul_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:text="Sign in untuk lanjut"
        android:textColor="#33000000"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul_login" />

    <ImageView
        android:id="@+id/kotak_email"
        android:layout_width="336dp"
        android:layout_height="764dp"
        android:src="@drawable/kotak_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjudul_login"
        android:layout_marginTop="-320dp"
        tools:layout_editor_absoluteY="-13dp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="260dp"
        android:layout_height="764dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjudul_login"
        android:layout_marginTop="-325dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Email Kamu"/>

    <ImageView
        android:id="@+id/icon_email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_email_24"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjudul_login"/>

    <ImageView
        android:id="@+id/kotak_password"
        android:layout_width="336dp"
        android:layout_height="764dp"
        android:src="@drawable/kotak_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kotak_email"
        android:layout_marginTop="-700dp"
        tools:layout_editor_absoluteY="-13dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="260dp"
        android:layout_height="764dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kotak_email"
        android:layout_marginTop="-705dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Password Kamu"/>

    <ImageView
        android:id="@+id/icon_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_lock_24"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_email_login"/>

    <TextView
        android:id="@+id/lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Lupa Password?"
        android:textColor="#2DD766"
        android:textSize="10sp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/judul_login" />

    <ImageView
        android:id="@+id/button_login"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_login_alt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjudul_login"
        android:layout_marginTop="220dp"
        tools:layout_editor_absoluteY="-13dp" />

    <TextView
        android:id="@+id/belum_punya_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Belum punya akun?"
        android:textColor="#C4C4C4"
        android:textSize="10sp"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul_login"/>

    <TextView
        android:id="@+id/daftar_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Daftar akun baru"
        android:textColor="#2DD766"
        android:textSize="10sp"
        android:layout_marginLeft="-120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/belum_punya_akun"
        app:layout_constraintTop_toBottomOf="@+id/judul_login" />


    



</androidx.constraintlayout.widget.ConstraintLayout>